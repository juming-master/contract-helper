{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "types": ["mocha"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declarationDir": "./types",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./test/**/*.ts", "./src/**/*.ts", "test/contract-utils.spec.ts", "test/helper.spec.ts", "test/p-map.spec.ts"],
  "exclude": ["node_modules", "test"]
}
